      <div id="overlay" class="overlay">
        <div class="overlay-content">
          <span class="close">&times;</span>
          <h2>Reservation</h2>
          <form action="/reserve" method="POST">
           {{#if technician}}
              <br>
              <label for="username">Enter username:</label>
              <input type="text" id="username" name="username">
              <br>
            {{/if}}
            <label for="date">Date:</label>
            <input type="date" id="date" name="date">
            <br>
            <label for="labNum">Labratory:</label>
            <select id="labNum" name="labNum">
              <option value="-1" selected disabled>Select a Lab</option>
              <option value="1">Labratory 1</option>
              <option value="2">Labratory 2</option>
              <option value="3">Labratory 3</option>
            </select>
            <br>
            <label for="time-in">Time In:</label>
            <select id="time-in" name="time-in" onchange="updateTimeOut();">
              <option value="-1" selected disabled>Select a time</option>
              <option value="0">7:30 AM</option>
              <option value="1">8:00 AM</option>
              <option value="2">8:30 AM</option>
              <option value="3">9:00 AM</option>
              <option value="4">9:30 AM</option>
              <option value="5">10:00 AM</option>
              <option value="6">10:30 AM</option>
              <option value="7">11:00 AM</option>
              <option value="8">11:30 AM</option>
              <option value="9">12:00 PM</option>
              <option value="10">12:30 PM</option>
              <option value="11">1:00 PM</option>
              <option value="12">1:30 PM</option>
              <option value="13">2:00 PM</option>
              <option value="14">2:30 PM</option>
              <option value="15">3:00 PM</option>
              <option value="16">3:30 PM</option>
              <option value="17">4:00 PM</option>
              <option value="18">4:30 PM</option>
              <option value="19">5:00 PM</option>
            </select>
            <br>
            <label for="time-out">Time Out:</label>
            <select id="time-out" name="time-out">
              <option value="-1" selected disabled>Select a time</option>
              <option value="0">7:30 AM</option>
              <option value="1">8:00 AM</option>
              <option value="2">8:30 AM</option>
              <option value="3">9:00 AM</option>
              <option value="4">9:30 AM</option>
              <option value="5">10:00 AM</option>
              <option value="6">10:30 AM</option>
              <option value="7">11:00 AM</option>
              <option value="8">11:30 AM</option>
              <option value="9">12:00 PM</option>
              <option value="10">12:30 PM</option>
              <option value="11">1:00 PM</option>
              <option value="12">1:30 PM</option>
              <option value="13">2:00 PM</option>
              <option value="14">2:30 PM</option>
              <option value="15">3:00 PM</option>
              <option value="16">3:30 PM</option>
              <option value="17">4:00 PM</option>
              <option value="18">4:30 PM</option>
              <option value="19">5:00 PM</option>
            </select>
            </select>
            <br>
            <label for="anonymous">Reservation Type:</label>
            <select id="anonymous" name="anonymous">
              <option value="0" selected> Standard Reservation</option>
              <option value="1"> Anonymous Reservation</option>
            </select>
            
            <input type="submit" class="next-btn" value="Next">
          </form>
        </div>
      </div>
    </main>
  </body>
